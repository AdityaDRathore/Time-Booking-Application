# filepath: /workspaces/Time-Booking-Application/backend/Dockerfile.dev

FROM node:20-alpine AS builder

WORKDIR /app

# âœ… Install Python and build tools needed for bcrypt (Alpine-compatible)
RUN apk add --no-cache \
  python3 \
  py3-pip \
  make \
  g++

# Install dependencies first
COPY package.json ./
COPY tsconfig.json ./
COPY prisma ./prisma/
COPY .env* ./
RUN npm install

# Generate Prisma client
COPY prisma ./prisma/
RUN npx prisma generate

# Copy the rest of the application
COPY . .

EXPOSE 4000

# Start dev server
CMD ["npm", "run", "dev"]
