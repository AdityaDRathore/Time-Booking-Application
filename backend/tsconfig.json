{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"],
      "@repository/*": ["src/repository/*"]
    }
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}